---
interface Props {
  quote1: string;
  quote2: string;
  quote3: string;
  quote4: string;
  author: string;
}

const { quote1, quote2, quote3, quote4, author } = Astro.props;
---
<section>
  <img src="/extragallery1.avif" class="image" data-aos="fade-up">
  <img src="/extragallery2.avif" class="image" data-aos="fade-down">
  <div class="quote">
    <p class="quote1" data-aos="fade-up">{quote1}</p>
    <p class="quote2" data-aos="fade-up">{quote2}</p>
    <p class="quote3" data-aos="fade-up">{quote3}</p>
    <p class="quote4" data-aos="fade-up">{quote4}</p>
    <p class="author" data-aos="fade-down">{author}</p>
  </div>
  <img src="/leaves13.svg" class="leaves13">
  <img src="/leaves14.svg" class="leaves14">
</section>
<style>
  section {
    padding-top: 100px;
    background-color: #EFEAE7;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    row-gap: 30px;
    position: relative;
  }
  .image {
    max-width: 300px;
  }
  .quote {
    max-width: 90%;
  }
  .quote1 {
    position: absolute;
    font-family: 'Breathney Demo';
    font-size: 30px;
    right: 150px;
    top: 150px;
    transform: rotate(-20deg);
    @media (width < 900px) {
      right: 15%
    }
  }

  p {
    font-size: 20px;
    letter-spacing: 3px;
    line-height: 30px;
    text-align: center;
  }
  .author {
    width: 100%;
    text-align: end;
    font-family: 'Breathney Demo';
    font-size: 20px;
    padding-top: 20px;
  }
  .leaves13 {
    position: absolute;
    width: 200px;
    left: 0;
    bottom: 0;
    @media (width < 900px) {
      width: 25%;
    }
  }
  .leaves14 {
    position: absolute;
    height: 250px;
    right: 0;
    top: -5px;
    @media (width < 900px) {
      height: 10%;
    }
  }
</style>