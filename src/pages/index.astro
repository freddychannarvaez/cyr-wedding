const quote1 = '¡Los esperamos!';
const quote2 = '“LAS PALABRAS NUNCA ALCANZAN';
const quote3 = 'CUANDO LO QUE HAY QUE DECIR';
const quote4 = 'DESBORDA EL ALMA.”';

---

<Layout title="La boda de Cinthya y Ricardo">
	<main>
		<Hero></Hero>
		<MainGallery
			quote={quote}
			author={author}
			></MainGallery>
		<Presentation name1={name1} name2={name2}
			text1={text1} text2={text2} month={month}
			day={day} year={year} hour={hour}
			address1={address1} address2={address2}></Presentation>
		<ExtraInfo dressCode1={dressCode1} dressCode2={dressCode2}
			dressCode3={dressCode3} dressCode4={dressCode4}
			dressCode5={dressCode5} gift1={gift1}
			gift2={gift2} gift3={gift3} gift4={gift4}
			confirmAssist1={confirmAssist1}
			confirmAssist2={confirmAssist2}
			confirmAssist3={confirmAssist3}></ExtraInfo>
		<ExtraGallery quote1={quote1} quote2={quote2}
			quote3={quote3} quote4={quote4} author={author}></ExtraGallery>
	</main>
</Layout>