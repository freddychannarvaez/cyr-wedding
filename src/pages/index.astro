const quote = '“ANDÁBAMOS SIN BUSCARNOS, PERO SABIENDO QUE ANDÁBAMOS PARA ENCONTRARNOS.”';
const author = 'J. Cortázar';

const name1 = 'Cinthya';
const name2 = 'Ricardo';
const text1 = 'Nos encantaría que formaras parte';
const text2 = 'de este día tan especial para nosotros.'
const month = 'Enero';
const day = '18';
const year = '2025';
const hour = '6:00 PM';
const address1 = 'CASA: CHAKÁ. CALLE 19A POR 22';
const address2 = 'DZYTIÁ, YUCATÁN.';

const dressCode1 = 'Código de vestimenta:';
const dressCode2 = 'Cóctel';
const dressCode3 = 'guayabera';
const dressCode4 = 'les pedimos llevar zapatos cómodos';
const dressCode5 = 'para mujeres sugerimos no llevar tacón de punta.';
const gift1 = 'Regalo de novios';
const gift2 = 'Gracias por su cariño, su apoyo y su presencia.';
const gift3 = 'contaremos con un buzón en la boda en el que podrán depositar este sobre con su regalo en efectivo.';
const gift4 = 'Por favor, no olviden añadir una tarjeta con sus deseos para nuestro matrimonio: ¡Será el mejor regalo!';
